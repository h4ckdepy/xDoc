<ui-sys doc title="虚拟列表滚动">
    <view class="ui-container">
        <!-- 简介 -->
        <ui-title title="list长度是{{list.length}}" depth="2" isIcon/>
        <scroll-view scroll-y="{{true}}" id="scroll" style="height: 480px;" bindscroll="onScorll">
            <view style="padding-top: {{beforeHeight}}px;padding-bottom: {{afterHeight}}px;">
                <view class="item" wx:for="{{windowsShowList}}" wx:key="index">
                    <view class="item-img">
                        <ui-img src="{{item.image}}" ui="radius border" local/>
                    </view>
                    <view class="item-view">
                        <view class="item-title">{{item.title}}</view>
                        <view class="item-time">{{item.passtime}}</view>
                    </view>
                </view>
            </view>
        </scroll-view>
    </view>

    <view class="mp-ad-container">
        <view class="shadow">
            <ad unit-id="adunit-5cbb45ce88fe9fd7"></ad>
        </view>
    </view>
</ui-sys>
